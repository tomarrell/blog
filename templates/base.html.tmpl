<style>
html {
  font-size: 18px;
  font-family: "Noto Serif", "Sans Serif";
}

body {
  margin: 0 1rem;
}

a {
  display: inline-block;
  text-decoration: none;
}

a::after {
  content: '';
  display: block;
  width: 0;
  height: 2px;
  background: black;
  transition: width .3s;
}

a:hover::after {
  width: 100%;
}

li {
  margin-bottom: 0.5rem;
}

.no-underline:hover {
  text-decoration: none;
}

.color-primary {
  color: #333;
}

.color-secondary {
  color: #EF8332;
}

.color-body {
  color: #444;
}

.color-faded {
  color: #555;
}

.post:hover {
  border-color: black;
}

ol, ul {
  padding-left: 2rem;
  margin-bottom: 1.25rem;
}

ol {
  list-style: decimal;
}

ul {
  list-style: disc;
}

th, td {
  padding: 0rem 0.8rem 0 0;
}

table {
  margin-bottom: 1.25rem;
}

.link-title:hover::after {
  background-color: white;
}

.link-posts:hover::after {
  background-color: rgba(110,231,183,var(--tw-text-opacity));
}

.link-github:hover::after {
  background-color: rgba(156,163,175,var(--tw-text-opacity));
}

.link-twitter:hover::after {
  background-color: rgba(96,165,250,var(--tw-text-opacity));
}

.link-about:hover::after {
  background-color: rgba(244,114,182,var(--tw-text-opacity));
}

{{ if true }}
body {
  background-color: rgb(13, 13, 13);
  color: #eee;
}

a:hover::after {
  background-color: #ff5656;
}

.link-post:hover::after {
  background-color: white;
}

.color-primary {
  color: #eee;
}

.color-secondary {
  color: #eee;
}

.color-body {
  color: #eee;
}

.color-faded {
  color: #eee;
}

.content blockquote {
  border-left: 2px solid white !important;
}

pre {
  background-color: #1a1a1a;
}

.post {
  border-color: #aaa;
}

.post:hover {
  border-color: white;
}

{{ end }}
</style>

{{ end }}
